<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--version21: android:statusBarColor-->
    <style
        name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomStatusBarTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="PrimaryStatusBarTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="contextMenuAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/colorchooser_enter</item>
        <item name="android:windowExitAnimation">@anim/colorchooser_exit</item>
    </style>



</resources>
