<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_dialog_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <EditText
            android:id="@+id/edit_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:labelFor="@id/edit_input"
            android:maxLines="3"
            android:textColor="@color/colorNavFont"
            android:textSize="16sp"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_words_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/words_num_init"
            android:textColor="@color/colorGray"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/text_words_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/words_limit_short"
            android:textColor="@color/colorNav"
            android:textSize="14sp"/>

    </LinearLayout>
</LinearLayout>
